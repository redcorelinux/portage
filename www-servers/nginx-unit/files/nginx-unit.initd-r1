command="/usr/sbin/unitd"
pidfile="/run/nginx-unit.pid"
user=${NXT_USER:-nginx-unit}
group=${NXT_GROUP:-nginx-unit}

depend() {
	use dns logger netmount
}

start_pre() {
	checkpath -d /var/lib/nginx-unit -o ${user}:${group} -m 0770
}
